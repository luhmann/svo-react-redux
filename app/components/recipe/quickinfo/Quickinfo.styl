@require '~styles/variables.styl'

$icon-height = 20px
$icon-width = 20px

.quickinfo
  display flex
  justify-content space-between
  margin 1rem auto 0
  width 36vw

.icon
  svg
    height $icon-height
    width $icon-width
    path, rect, polygon 
      fill darken($c-white, 30%)
      stroke @fill

.icon-active
  svg
    height $icon-height
    width $icon-width
    path, rect, polygon 
      fill $c-white
      stroke @fill
