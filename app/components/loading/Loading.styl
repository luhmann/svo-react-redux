@require '~styles/variables.styl'


.root
  height 100vh
  width 100vw

.image
  height 100vh
  object-fit cover
  width 100vw

.message
  text-align center
  position absolute
  left 50%
  top 50%
  transform translate(-50%,-50%);
  z-index $l-standard

.spinner
  border 5px solid $c-mean-gray 
  border-radius 30px
  height 30px
  opacity 0
  margin 0 auto
  margin-bottom 0.25rem
  width 30px
  animation pulsate 1s ease-out
  animation-iteration-count infinite

.text
  color $c-white
  font-family $t-font-text



@keyframes pulsate
  0%
    transform: scale(.1)
    opacity: 0.0

  50%
    opacity: 1

  100%
    transform: scale(1.2)
    opacity: 0
